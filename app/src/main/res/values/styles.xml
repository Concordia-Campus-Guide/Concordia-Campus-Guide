<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InfoCardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="SwitchCampusButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/colorAppTheme</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="InfoCardDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">TextView</item>
    </style>

    <style name="InfoCardDescriptionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/colorAppTheme</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="toolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorAppTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
