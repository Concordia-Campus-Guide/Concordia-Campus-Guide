<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_directions_car_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_directions_bus_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_shuttle" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_directions_walk_black_24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_accessible_black_24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>